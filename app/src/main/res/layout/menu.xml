<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan">

    <Button
        android:id="@+id/icerik"
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="İÇERİK "
        android:textColor="@color/black"
        app:backgroundTint="@color/acikmor"
        app:layout_constraintBaseline_toBaselineOf="@+id/siparisver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/siparisver" />

    <Button
        android:id="@+id/suprizsecim"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="SÜPRİZ SEÇİM"
        android:textColor="@color/black"
        app:backgroundTint="@color/acikmor"
        app:layout_constraintBottom_toBottomOf="@+id/yorumlar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yorumlar" />

    <Button
        android:id="@+id/yorumlar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="119dp"
        android:text="YORUMLAR"
        android:textColor="@color/black"
        app:backgroundTint="@color/acikmor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/suprizsecim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siparisver" />

    <Button
        android:id="@+id/siparisver"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="146dp"
        android:text="Sipariş Ver"
        android:textColor="@color/black"
        app:backgroundTint="@color/acikmor"
        app:layout_constraintBottom_toTopOf="@+id/yorumlar"
        app:layout_constraintEnd_toStartOf="@+id/icerik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="251dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="104dp"
        android:text="DinnerWare"
        android:fontFamily="cursive"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/siparisver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>